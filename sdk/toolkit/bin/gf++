#!/bin/bash

_SDK_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/../.."
_SDK_CFLAGS="-pthread -sENVIRONMENT=web,worker -s ASYNCIFY -s ASYNCIFY_IMPORTS=[__syscall_poll] --js-library $_SDK_DIR/sysrootlibs/jslibraries/library_unixsockfs.js --pre-js $_SDK_DIR/sysrootlibs/jslibraries/pre-main.js"

"$_SDK_DIR"/emsdk/upstream/emscripten/em++ $_SDK_CFLAGS "$@"