{
  "name": "greenfield-app-endpoint-server",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udevbe/greenfield.git"
  },
  "engines": {
    "node": "16"
  },
  "license": "AGPL-3.0",
  "description": "Wayland application endpoint.",
  "bin": {
    "appendpointd": "src/index.js"
  },
  "scripts": {
    "generate:api": "openapi-typescript ./api.yaml --output ./src/@types/api.d.ts",
    "generate:config-types": "js-yaml ./configschema.yaml > ./src/configschema.json && json2ts -i ./src/configschema.json -o ./src/@types/config.d.ts --style.singleQuote --no-style.semi",
    "generate:xdgshell": "westfield-endpoint-generator protocol/xdg-shell.xml -o src/protocol",
    "generate:wayland": "westfield-endpoint-generator protocol/wayland.xml -o src/protocol",
    "generate": "yarn generate:api && yarn generate:config-types && mkdir -p src/protocol && yarn generate:wayland && yarn generate:xdgshell",
    "build:native": "cmake-js",
    "build:typescript": "tsc",
    "build": "yarn build:native && yarn build:typescript",
    "demo": "COMPOSITOR_SESSION_ID=test123 GST_GL_WINDOW=gbm ts-node ./src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "pino": "^7.9.2",
    "pino-pretty": "^7.5.4",
    "retransmitting-websocket": "1.0.0-alpha.0",
    "uWebSockets.js": "uNetworking/uWebSockets.js#v20.6.0",
    "xtsb": "^0.0.1-alpha.8"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.22",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "cmake-js": "^6.3.0",
    "epoll": "^4.0.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-openapi": "^0.14.2",
    "json-schema-to-typescript": "^10.1.5",
    "node-api-headers": "^0.0.1",
    "openapi-typescript": "^5.2.0",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "westfield-endpoint": "1.0.0",
    "westfield-endpoint-generator": "^0.3.1"
  }
}
