{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDirs": ["src/@types","src"],
    "pretty": true,
  },
  "exclude": ["node_modules", ".eslintrc.js", ".prettierrc.js", "jest.config.js", "**/*.spec.ts"],
  "ts-node": {
    "files": true
  },
}
