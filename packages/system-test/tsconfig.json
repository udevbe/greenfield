{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "rootDir": ".",
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test"
  ]
}
