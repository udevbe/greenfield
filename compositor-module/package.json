{
  "name": "greenfield-compositor",
  "version": "0.0.13",
  "description": "A Wayland HTML5 Compositor Library.",
  "keywords": [
    "linux",
    "wayland",
    "javascript",
    "typescript",
    "compositor",
    "html5",
    "browser",
    "canvas",
    "webgl",
    "websocket",
    "remote",
    "web"
  ],
  "main": "dist/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "generate:webfs": "openapi-generator-cli generate",
    "generate": "yarn generate:webfs",
    "prebuild": "rimraf dist types src/webfs/api",
    "build": "yarn generate && tsc && cpy './src/assets/**' './dist/assets/'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "demo": "webpack serve --config demo-compositor/webpack.config.js"
  },
  "dependencies": {
    "@types/dom-webcodecs": "^0.1.3",
    "retransmitting-websocket": "0.0.12",
    "tinyh264": "0.0.7",
    "westfield-runtime-common": "0.5.1",
    "westfield-runtime-server": "0.5.1",
    "xtsb": "0.0.1-alpha.8"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.4.26",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.0",
    "typescript": "^4.4.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1",
    "worker-loader": "^3.0.8"
  },
  "author": "Erik De Rijcke",
  "homepage": "https://www.greenfield.app",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/udevbe/greenfield/tree/master/compositor-module"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  }
}
