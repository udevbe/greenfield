{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "ES2020",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "types",
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "../src/@types",
    "../src/custom-typings.d.ts",
    "src",
  ]
}
