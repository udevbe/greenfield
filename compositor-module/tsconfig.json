{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "target": "ES2017",
    "module": "ES2020",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "rootDir": "src",
    "strict": true,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    ".prettierrc.js",
    "jest.config.js",
    "**/*.spec.ts"
  ]
}
