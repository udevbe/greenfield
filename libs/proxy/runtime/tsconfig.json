{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "types",
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDirs": [
      "src",
      "src/@types"
    ],
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "exclude": [
    "dist",
    "types",
    "node_modules",
    ".eslintrc.js",
    ".prettierrc.js"
  ],
  "ts-node": {
    "files": true
  }
}
